{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gradle"
  ],
  "gradle": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "automerge": false,
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "packageRules": [
    {
      "groupName": "All dependencies",
      "matchUpdateTypes": ["major", "minor", "patch"]
    }
  ]
}
