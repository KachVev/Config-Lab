{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gradle"
  ],
  "gradle": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "automerge": false,
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "packageRules": [
    {
      "groupName": "Kotlin dependencies",
      "matchPackageNames": [
        "org.jetbrains.kotlin{/,}**"
      ]
    },
    {
      "groupName": "Gradle Plugins",
      "matchPackageNames": [
        "/gradle-plugin/"
      ]
    }
  ]
}
